<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/SongTitleEdtTxt"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:hint="Please Enter a Song Title"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ArtistNameEdtTxt"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:hint="Please Enter An Artist Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SongTitleEdtTxt" />

    <EditText
        android:id="@+id/RateEdtTxt"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:hint="Please Rate this (1-5)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ArtistNameEdtTxt" />

    <EditText
        android:id="@+id/CommentEdtTxt"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:hint="You can leave a Comment here "
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RateEdtTxt" />

    <Button
        android:id="@+id/addToPlaylist"
        android:layout_width="212dp"
        android:layout_height="70dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="100dp"
        android:text="Add to my Playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CommentEdtTxt" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="212dp"
        android:layout_height="70dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="100dp"
        android:text="Exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPlaylistButton" />

    <Button
        android:id="@+id/viewPlaylistButton"
        android:layout_width="212dp"
        android:layout_height="70dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="100dp"
        android:text="View Playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToPlaylist" />


</androidx.constraintlayout.widget.ConstraintLayout>